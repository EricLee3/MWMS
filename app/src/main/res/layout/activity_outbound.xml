    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ios.mwms.OutboundActivity">

        <ProgressBar
        android:layout_centerHorizontal="true"
        android:id="@+id/stock_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_outbound_button"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>

        <ProgressBar
            android:layout_centerHorizontal="true"
            android:id="@+id/outbound_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/datePicker"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:focusableInTouchMode="true"/>
    <!--android:layout_gravity="center_horizontal" -->

    <com.diegocarloslima.fgelv.lib.FloatingGroupExpandableListView
        android:id="@+id/outbound_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:childDivider="#FF000000"
        android:divider="#FF000000"
        android:dividerHeight="1dp"
        android:paddingLeft="10dp"
         />
        <!-- android:paddingTop="250dp" -->
    <!--<include layout="@layout/activity_outbound_list"/> -->

</LinearLayout>